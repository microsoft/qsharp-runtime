<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <EnlistmentRoot>$([MSBuild]::NormalizeDirectory($(MSBuildThisFileDirectory)..\..\))</EnlistmentRoot>
    <RunQsc>True</RunQsc>
    <RunQDocGen>False</RunQDocGen>
    <QSimDll>$([MSBuild]::NormalizePath($(EnlistmentRoot)src/Runtime/build/Release/Microsoft.Quantum.Simulator.Runtime.dll))</QSimDll>
    <QscExe>dotnet $([MSBuild]::NormalizePath($(EnlistmentRoot)src/CsharpGenerationApp/bin/$(Configuration)/netcoreapp2.1/Microsoft.Quantum.CsharpGenerationApp.dll))</QscExe>
    <LangVersion>latest</LangVersion>
    <QsharpLangVersion>0.8</QsharpLangVersion>
    <EnableDefaultNoneItems>false</EnableDefaultNoneItems>
    <DisableFastUpToDateCheck>True</DisableFastUpToDateCheck>
  </PropertyGroup>

  <ItemGroup>
    <PropertyPageSchema Include="$(MSBuildThisFileDirectory)QSharp.ProjectItemsSchema.xaml;" />
    <PropertyPageSchema Include="$(MSBuildThisFileDirectory)QSharp.xaml;">
      <Context>File;BrowseObject</Context>
    </PropertyPageSchema>
  </ItemGroup>

  <ItemGroup>
    <QsharpCompile Include="**/*.qs" Exclude="obj/**" />
  </ItemGroup>
  
  <ItemGroup>
    <None Include="$(QSimDll)">
      <Link>Microsoft.Quantum.Simulator.Runtime.dll</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Visible>false</Visible>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="$(EnlistmentRoot)src\Intrinsic\Microsoft.Quantum.Intrinsic.csproj" />
    <ProjectReference Include="$(EnlistmentRoot)src\Common\Microsoft.Quantum.Simulation.Common.csproj" />
    <ProjectReference Include="$(EnlistmentRoot)src\Core\Microsoft.Quantum.Simulation.Core.csproj" />
    <ProjectReference Include="$(EnlistmentRoot)src\QCTraceSimulator\Microsoft.Quantum.Simulation.QCTraceSimulatorRuntime.csproj" />
    <ProjectReference Include="$(EnlistmentRoot)src\Simulators\Microsoft.Quantum.Simulators.csproj" Condition="'$(EnlistmentRoot)src\Simulators' != '$(MSBuildProjectDirectory)'"  />
  </ItemGroup>
</Project>
