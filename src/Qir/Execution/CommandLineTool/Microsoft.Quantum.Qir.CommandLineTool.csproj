  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta1.20213.1"/>
    <ProjectReference Include="..\Tools\Microsoft.Quantum.Qir.Tools.csproj"/>
  </ItemGroup>

</Project>
